{
  "name": "obsidian-quran-plugin",
  "version": "1.6.0",
  "description": "Obsidian plugin to find and insert any Quran Ayah (verse) in your notes",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "prettier:ci": "./node_modules/.bin/prettier --check main.ts src/**/*.ts tests/**/*.ts",
    "prettier:fix": "./node_modules/.bin/prettier --write main.ts src/**/*.ts tests/**/*.ts",
    "normalize": "npx --yes tsx scripts/normalize_text.ts",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs",
    "test": "jest",
    "enrich": "npx tsx scripts/enrich_data.ts"
  },
  "keywords": [
    "obsidian-plugin",
    "quran"
  ],
  "author": "Ammar Alakkad",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "8.56.0",
    "@typescript-eslint/parser": "8.56.0",
    "builtin-modules": "5.0.0",
    "esbuild": "^0.27.3",
    "jest": "^30.2.0",
    "obsidian": "^1.12.2",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "tslib": "2.8.1",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "quran-json": "^3.1.2"
  }
}
